/**
* Layout CSS
* @class Layout
* @module layout.css
*/
body
	background #FFF
	color #b6bbba
	cursor relative
	font 12px family2
	height 100%
	margin 0
	overflow hidden
	padding 0
	position relative
h1, h2,h3
	font-weight 400
	margin 0
p
	line-height 16px
	margin 0
a
	text-decoration none
ul
	list-style none
	margin 0
	padding 0
input[type="text"], input[type="password"], textarea
	background #FBFBFB
	border-color #e2e2e2
	border-style solid
	border-width 1px 0 0 1px
	font 400 12px/16px family2
	padding 6px 12px
input[readonly]
	background #F1F1F1
select
	background #FBFBFB
	border-color #E2E2E2
	border-style solid
	border-width 1px 0 0 1px
	color #b6bbba
	font 400 12px/16px family2
	padding 5px 4px 5px 12px
textarea
	resize none