			border none
	a
		color #a0a0a0
		display block
		font-size 13px
		height 30px
		line-height 15px
		overflow hidden
		padding 8px 1px 8px 36px
		position relative
		&:hover, &.active
			span
				background-position right top
	span
		height 32px
		left 1px
		position absolute
		top 7px
		width 32px
.prod-det
	float left
	height 364px
	margin-left 30px
	padding-top 50px
	position relative
	width 358px
	h2
		color #db8f1b
		font-family family2
		font-size 20px
		line-height 22px
		margin-bottom 6px
		text-align center
	h3
		color #8a8a8a
		font-family family2
		font-size 14px
		line-height 16px
		margin-bottom 22px
		text-align center
	p
		line-height 20px
		text-align justify
	.btn-back
		left -21px
		top 26px
.prod-img
	float left
	height 368px
	margin-left 30px
	padding-top 46px
	width 252px
	img
		display block
		height 274px
		margin 0 auto
		width 182px
.prod-price
	padding-top 30px
	*zoom 1
	&:before,&:after
		display table
		content ""
		line-height 0
	&:after
		clear both
	p
		color #db8f1b
		float left
		font-size 14px
		text-align right
		width 128px
