/*
*	Listado de Categorías
*/
.pcateg-title
	border-radius 5px 5px 0 0
	background #868686
	background unquote("url(data:image/svg+xml;base64,)")
	background -moz-linear-gradient(top,  #9e9e9e 0%, #868686 100%)
	background -webkit-gradient(linear, left top, left bottom, color-stop(0%,#9e9e9e), color-stop(100%,#868686))
	background -webkit-linear-gradient(top,  #9e9e9e 0%,#868686 100%)
	background -o-linear-gradient(top,  #9e9e9e 0%,#868686 100%)
	background -ms-linear-gradient(top,  #9e9e9e 0%,#868686 100%)
	background linear-gradient(to bottom,  #9e9e9e 0%,#868686 100%)
	color #FFF
	font-size 14px
	font-weight 700
	height 27px
	line-height 15px
	padding 13px 0 0 34px
	position relative
	&.fix
		height 35px
		padding-top 5px
	span
		background url(routImg+"sprites-productos.png") -245px 0
		height 23px
		left 6px
		position absolute
		top 8px
		width 24px
.prod-category
	width 172px
	float left
	a
		cursor pointer
	li:hover, li.active
		h4
			color #383838
		>ul
			max-height 500px
		>a
			color #383838
.pcateg-list
	border-color #e7e7e7
	border-radius 0 0 5px 5px
	border-style solid
	border-width 0 1px 1px 1px
	margin-bottom 6px
	padding 0 1px
	h4
		border-bottom 1px solid #e7e7e7
		color #868686
		cursor pointer
		font-size 12px
		font-weight 400
		line-height 14px
		padding 6px
		&.last
			border none
	a 
		color #8d8d8d
	i
		margin-left -10px
		&:before
			content "● "
.pcateg-slist
	font-weight normal
	transition max-height .5s
	max-height 0
	padding-left 16px
	overflow hidden
	>li
		color #8d8d8d
		font-size 12px
		line-height 13px
		padding 5px 0
		&:first-child
			padding-top 7px
		ul
			padding-left 11px
			padding-right 5px
			max-height 0
			overflow hidden
			transition max-height .5s
			li
				margin-top 11px
				line-height 12px
				padding-left 7px
				a 
					color #8d8d8d
				i
					margin-left -10px
					&:before
						content "● "
#searchProd
	margin-bottom 8px
	position relative
	label
		background url(routImg+"sprites-productos.png") -91px -443px
		height 12px
		left 5px
		position absolute
		top 6px
		width 11px
	input
		background #FFF
		border 1px solid #DDD
		border-radius 4px
		color #797979
		font-size 12px
		height 17px
		line-height 17px
		padding 3px 3px 3px 20px
		width 147px
/* Listado de Productos */
.store-list
	float right
	width 760px
.typ-lstore
	float left
	padding 10px 0 0 6px
	li
		float left
		margin-left 20px
		&:first-child
			margin 0
	a
		color #b2b2b2
		display block
		font-size 12px
		line-height 14px
		padding 1px 0
		padding-left 19px
		position relative
		&.active, &:hover
			color #6b6b6b
			.icon-grid
				background-position -121px -42px
			.icon-details
				background-position -269px 0
	i
		left 0
		position absolute
		top 1px
