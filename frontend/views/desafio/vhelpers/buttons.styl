/**
* Buttons CSS
* @class Buttons
* @module buttons.css
*/
.btn
	border none
	border-radius 6px
	color white
	cursor pointer
	display inline-block
	*display inline
	font 400 15px/27px family1
	padding 0 30px
	vertical-align top
	*zoom 1
	backgroundLighten(#EE8100,80%)
	&:hover
		color white
.btn-green
	background-color #CDD520
	border-radius 10px
	color #fff
	cursor pointer
	float right
	font 23px/46px family2
	padding 0 30px
	transition all .4s ease
	&:hover
		background-color #bec416
		color #fff
.btn-reto
	background-color #008FD1
	border-radius 5px
	box-shadow 1px 2px 5px 0 #212121
	color #fff
	cursor pointer
	float right
	font 14px/28px family2
	padding 0 15px
	transition all .4s ease
	position absolute
	top 0
	right 0
	&:hover
		opacity 0.5
		color #FFF
.btn-home
	background-color #EE8100
	border-radius 100px
	box-shadow 0 2px 3px #9a5e04
	color #fff
	font-size 12px
	height 55px
	line-height 13px
	position absolute
	right 10px
	text-align center
	text-transform uppercase
	top 16px
	width 55px
	&:hover
		color #fee7c4
	span
		background url(routImg+'icon-desafio.png') btnHome no-repeat
		display block
		height 20px
		margin 12px auto 2px
		width 20px
.btn-blue
	background-color #008cce
	color #fff
	float left
	font 15px/17px family2
	height 180px
	margin-left 20px
	padding-top 18px
	text-align center
	text-decoration none
	width 175px
	&:hover
		background-color #2AB2F0
		color #fff
	span
		background url(routImg+'actualiza.jpg') no-repeat
		display block
		height 100px
		margin 0 auto 10px
		width 110px
