/**
* Layout CSS
* @class Layout
* @module layout.css
*/
body
	background #fff
	color #a1a1a1
	cursor default
	font-family family1
	font-size 13px
	height 100%
	line-height 15px
	margin 0
	padding 0
h1, h2,h3,h4
	font-size 13px
	font-weight 400
	margin 0
p
	margin 0 0 10px
a
	color inherit
	text-decoration none
	&:hover
		color #EE8100
ul
	list-style none
	margin 0
	padding 0
button
	border none
	padding 0
	&:hover
		color #EE8100
iframe
	display block
fieldset
	border none
	margin 0
	padding 0
dl
	margin 0
	padding 0
dt
	float left
	padding 4px 0
	width 136px
dd
	margin-left 140px
	padding 4px 0
input[readonly="readonly"]
	background #F3F3F3 !important
	cursor default
::-webkit-input-placeholder
	color #999
	font-size 12px
::-moz-placeholder
	color #999
	font-size 12px
:-ms-input-placeholder
	color #999
	font-size 12px
input:-moz-placeholder
	color #999
	font-size 12px