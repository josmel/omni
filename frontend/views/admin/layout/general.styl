/**
* General Section
* @class General
* @module style.css
*/
body
	background url(routImg+"bg-body.jpg")
	color #424242
	cursor default
	font 13px/1.2 family1
	margin 0
	min-height 100%
	position relative
p
	margin 0
a
	color #2B6893
	text-decoration none
	&:hover
		text-decoration underline
ul
	list-style none
	margin 0
	padding 0
h1,h2,h3,h4
	font-family family2
	font-weight normal
	margin 0
input[type="text"],input[type="password"],textarea
	border 1px solid #D5D5D5
	background #FFF
	padding 6px
	font-size 11px
	font-family family1
	line-height 13px
	height 27px
	box-sizing border-box
	width 100%
	&.error
		border 1px solid #EB4949
textarea
	height 70px
	resize none
input[type="file"]
	&.error
		color #EB4949
select
	background #FFF
	border 1px solid #D5D5D5
	padding 3px
	&.error
		border 1px solid #EB4949