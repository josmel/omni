/**
* Button CSS
* @class Button
* @module admin.css
*/
.btn-fuxion
	background #db8f1b
	border none
	box-shadow -1px 1px 3px rgba(0, 0, 0, 0.44)
	color #FFF
	display inline-block
	font 400 12px/13px family2
	padding 5px 28px
	vertical-align top
	*zoom 1
	&:hover
		opacity 0.85
	& + .btn-lnk
		margin-left 40px
.btn-lnk
	background #4e8acc
	border none
	box-shadow -1px 1px 3px rgba(0, 0, 0, 0.44)
	color #FFF
	display inline-block
	font 400 12px/13px family2
	padding 5px 28px
	vertical-align top
	*zoom 1
	&:hover
		opacity 0.85