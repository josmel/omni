/**
* Landing CSS
* @class Landing
* @module landing.css
*/
.decor-top, .decor-bottom
	background url(routImg+"bg-body.gif") repeat-x
	height 170px
	left 0
	position absolute
	width 100%
	z-index 1
.decor-top
	background-position 0 -16px
	top 0
.decor-bottom
	bottom 0
.ctn-bgfx
	height 253px
	left 0
	position absolute
	top 80px
	width 100%
	z-index 2
	.bgfx1
		background #f7f7f7
		border-bottom 2px solid #008fd1
		border-top 2px solid #008fd1
		height 249px
	.bgfx2
		background url(routImg+"bg-fuxion.gif") center center repeat-x
		height 192px
		left 0
		position absolute
		top 30px
		width 100%
.row-well
	background #FFF
	box-shadow 0 0 16px rgba(142, 142, 142, 0.13)
	height 378px
	margin 0 auto
	padding 18px 26px
	position relative
	width 818px
	z-index 3
	&.fix
		padding 0 26px
/**
* Inicio, Testimonio, Contactame CSS
*/
.fx-profile
	float left
	padding 0 18px
	text-align center
	width 244px
	.prof-img
		height 208px
		margin 0 auto 12px
		width 208px
		img
			border-radius 208px
			display block
	.prof-name
		color #4e8acc
		font-family family2
		font-size 14px
		line-height 16px
		margin-bottom 14px
	.prof-address
		color #d79129
		font-family family2
		font-size 14px
		line-height 16px
		margin-bottom 18px
		a
			color #d79129
			&:hover
				text-decoration underline
	.prof-social
		*zoom 1
		&:before,&:after
			display table
			content ""
			line-height 0
		&:after
			clear both
		li			
			color #7c8389
			float left
			font-family family2
			font-size 10px
			margin-left 16px
			&:first-child
				margin 0
		a
			background url(routImg+"icon-set.png") no-repeat
			display block
			height 37px
			margin 0 auto 5px
			width 38px
			&:hover
				opacity 0.8
		.twt
			background-position twitter
		.fb
			background-position facebook
		.ytb
			background-position youtube
		.blg
			background-position blogger
.fx-break
	background #b0b5b8
	float left
	height 340px
	margin 19px 25px 0
	width 1px
.fx-descrp
	float left
	width 486px
	h2
		color #db8f1b
		font 400 14px family2
		margin-bottom 14px
		text-align center
	p
		line-height 20px
		margin-bottom 18px
		text-align justify
#slid-profile
	padding 53px 0
	.viewport
		height 272px
		width 486px
	.buttons
		bottom 8px
		&.prev
			right 34px
		&.next
			right 0
		&:hover
			opacity 0.8
#frm-contactenos
	margin 0 auto
	width 386px
	input[type="text"],textarea
		width 360px
	textarea
		height 76px
