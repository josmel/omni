/**
* Productos
*/
.prod-lcateg
	background url(routImg+"bg-shadow.png") right top repeat-y
	float left
	height 318px
	padding 50px 17px 0 0
	width 294px
.prod-list
	float left
	padding 16px 12px 0 38px
	width 457px
.lcateg-list
	*zoom 1
	&:before,&:after
		display table
		content ""
		line-height 0
	&:after
		clear both
	li
		float left
		margin-left 12px
		width 84px
		&:nth-child(n+4)
			margin-top 14px
		&:nth-child(3n+1)
			margin-left 0
	h3
		font-family family3
		font-size 12px
		height 28px
		line-height 14px
		margin-bottom 2px
		text-align center
	a
		background url(routImg+"icon-set.png")
		display block
		height 55px
		margin 0 auto
		width 54px
	.lcat1
		h3
			color #473875
		a
			background-position cat1
	.lcat2
		h3
			color #bf0c17
		a
			background-position cat2
	.lcat3
		h3
			color #229a7f
		a
			background-position cat3
	.lcat4
		h3
			color #4e8acc
		a
			background-position cat4
	.lcat5
		h3
			color #484848
		a
			background-position cat5
	.lcat6
		h3
			color #c20b68
		a
			background-position cat6
	.lcat7
		h3
			color #ecbd09
		a
			background-position cat7
.slid-product
	*zoom 1
	&:before,&:after
		display table
		content ""
		line-height 0
	&:after
		clear both
	.product
		float left
		margin-left 24px
		width 136px
		h2
			color #58b7b2
			font-family family3
			font-size 14px
			height 28px
			line-height 14px
			padding-bottom 3px
			text-align center
		a
			display block
			position relative
		&:nth-child(3n+1)
			margin 0
		&:nth-child(n+4)
			margin-top 18px
	.prod-decor
		background #4e8acc
		bottom 10px
		box-shadow -1px 2px 2px rgba(0, 0, 0, 0.43)
		color #FFF
		font-family family2
		font-size 12px
		height 22px
		line-height 22px
		position absolute
		right -4px
		text-align center
		width 100px
		span
			background url(routImg+"icon-set.png") bgProduct
			height 6px
			position absolute
			right 0
			top -6px
			width 4px
.slid-nav
	height 20px
	padding-top 10px
	position relative
	*zoom 1
	&:before,&:after
		display table
		content ""
		line-height 0
	&:after
		clear both
	.btnav
		background url(routImg+"icon-set.png")
		bottom 0
		height 22px
		position absolute
		text-indent -9999px
		width 21px
	.prev
		background-position btnPrev
		right 34px
	.next
		background-position btnNext
		right 0