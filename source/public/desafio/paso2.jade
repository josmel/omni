						.frm-group
							label.control-label NOMBRE
							.frm-control
								input(type="text", id="txtName", name="txtName", class="input-xmedium")
							span.help-required *
						.frm-group
							label.control-label APELLIDO PATERNO
							.frm-control
								input(type="text", id="txtLastname", name="txtLastname", class="input-xmedium")
							span.help-required *
						.frm-group
							label.control-label CÓDIGO EF - CP 
							.frm-control
								input(type="text", id="txtCode", name="txtCode", class="input-xmedium")
							span.help-required *
						.frm-group
							label.control-label TELF. - CEL
							.frm-control
								input(type="text", id="txtPhones", name="txtPhones", class="input-xmedium")
							span.help-required *
						.frm-group
							label.control-label EMAIL
							.frm-control
								input(type="text", id="txtEmail", name="txtEmail", class="input-xmedium")
							span.help-required *
					.left-cnt.ml60
						.frm-group
							label.control-label SEUDÓNIMO
							.frm-control
								input(type="text", id="txtAlias", name="txtAlias", class="input-xmedium")
							span.help-required *
							a(href="javascript:;", class="help-circle") ?
						.frm-group
							label.control-label APELLIDO MATERNO
							.frm-control
								input(type="text", id="txtFirstname", name="txtFirstname", class="input-xmedium")
							span.help-required *
						.frm-group
							label.control-label EDAD 
							.frm-control
								select.slc-small
									option Edad
									option Seleccione 1
									option Seleccione 2
							span.help-required *
						.frm-group
							label.control-label RPM
							.frm-control
								input(type="text", id="txtRpm", name="txtRpm", class="input-xmedium")
							span.help-required *
				p.color-orange.mt20 (*) Campos obligatorios
				.frm-group.row
					button(type="submit", id="sbmSend", class="btn", title="GUARDAR") GUARDAR
				.separator-line
